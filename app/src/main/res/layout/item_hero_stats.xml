<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="64dp"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/itemBackground1"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:id="@+id/item_profile_briefing"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/hero_icon"
            android:layout_marginTop="4dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:contentDescription="user steam profile picture"
            app:srcCompat="@mipmap/ic_npc_dota_hero_nevermore" />
        <TextView
            android:id="@+id/hero_winrate"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="..."
            android:layout_weight="1"
            android:textColor="@color/white"
            android:fontFamily="@font/inter"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="Total:"
            android:layout_weight="1"
            android:textColor="@color/light_gray"
            android:fontFamily="@font/inter"/>
        <TextView
            android:id="@+id/hero_games"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginBottom="3dp"
            android:text="..."
            android:layout_weight="1"
            android:textColor="@color/white"
            android:fontFamily="@font/inter_extrabold"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>