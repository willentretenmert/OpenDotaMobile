<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.APIapplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/barColor</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/barColor</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/background</item>
    </style>

    <!-- Custom bottom nav -->
    <style name="OpenDota.Custom.bottomNavIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/accentColor</item>
    </style>

    <!-- Custom toolbar  -->
    <style name="OpenDota.Custom.ToolBar" parent="Widget.AppCompat.Toolbar">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textSize">20sp</item>
        <item name="android:shadowColor">@color/accentColor</item>
    </style>

</resources>